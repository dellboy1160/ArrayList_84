<Window x:Class="Arraylist_84.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arraylist_84"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btn_add" Content="Add" HorizontalAlignment="Left" Margin="101,213,0,0" VerticalAlignment="Top" Width="173" Height="46" Click="btn_add_click"/>
        <Button x:Name="btn_remove" Content="Remove" HorizontalAlignment="Left" Margin="314,213,0,0" VerticalAlignment="Top" Width="173" Height="46" Click="btn_remove_Click"/>
        <Button x:Name="btn_show" Content="Show" HorizontalAlignment="Left" Margin="525,213,0,0" VerticalAlignment="Top" Width="173" Height="46" Click="btn_show_click"/>
        <TextBox x:Name="txt_data" HorizontalAlignment="Left" Height="71" Margin="101,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="597" TextChanged="txt_data_TextChanged"/>

    </Grid>
</Window>
